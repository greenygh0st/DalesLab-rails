<div id="documentation">
  <div class="container">
    <h2>Login</h2>
    <div class="block">
      <a href="/">Home</a> \\ Login
      <%= form_for(:session, url: login_path, html: { :class => 'form-horizontal style-form' }) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.email_field :email, :placeholder => "Email...", :class => 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password, :placeholder => "Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">2FA Code</label>
        <div class="col-sm-10">
            <%= f.text_field :code, :placeholder => "Two factor auth code (If Applicable)...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <span></span>
        <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-10">
            <p>
              <a href="/forgot-password">Forgot Password?</a>
            </p>
            <p>
              <%= f.submit "Log in", class: "btn btn-theme" %>
            </p>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
