<div id="documentation">
  <div class="container">
    <h2>Forgot Password</h2>
    <div class="block">
      <a href="/">Home</a> \\ Forgot Password
      <%= form_for(:forgot_password, url: forgot_password_path, html: { :class => 'form-horizontal style-form' }) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.email_field :email, :placeholder => "Email...", :class => 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">2FA Code</label>
        <div class="col-sm-10">
            <%= f.text_field :code, :placeholder => "Two factor auth code (If Applicable)...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-10">
          * If you forgot your password you can request a new one. Please note that if you enabled two factor authentication use must also enter the correct TFA code to submit your reset request.
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-10">
            <%= f.submit "Submit Request", class: "btn btn-theme" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
