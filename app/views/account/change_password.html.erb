<div id="single">
  <div class="container">
    <div style="text-align:center;">
      <h1>Change Your Password</h1>
      <%= form_for(:password_change, url: account_change_password_path, html: { :class => 'form-horizontal style-form' }) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password, :placeholder => "Old Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :new_password, :placeholder => "New Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-10">
            <%= f.submit "Change Password", class: "btn btn-theme" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
