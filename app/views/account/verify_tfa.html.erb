<div id="single">
  <div class="container">
    <div style="text-align:center;">
      <h1>Verify Two Factor Authentication</h1>
      <div>
        <div>

        </div>
        <%= form_for(:tfa, url: account_verify_tfa_path, html: { :class => 'form-horizontal style-form' }) do |f| %>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Enter TFA Code</label>
          <div class="col-sm-10">
              <%= f.text_field :code, :placeholder => "Password...", :class => 'form-control'  %>
            </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
          <div class="col-sm-10">
              <%= f.submit "Enable Two Factor Authentication", class: "btn btn-theme" %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
