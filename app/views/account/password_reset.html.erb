<div id="single">
  <div class="container">
    <h2>Password Reset</h2>
    <div class="block">
      <a href="/">Home</a> \\ Password Reset
      <%= form_for(@user, url: password_reset_patch_path, html: { :class => 'form-horizontal style-form' }) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password, :placeholder => "New Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Confirm Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password...", :class => 'form-control'  %>
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-10">
            <%= f.submit "Reset/Change Password", class: "btn btn-theme" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
