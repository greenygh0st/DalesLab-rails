<h1>Create a new blog post...</h1>

<%= form_for @blog, url: {action: "create"} do |f| %>
  <div class="field">
    Title<br>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    Subtitle<br>
    <%= f.text_area :subtitle %>
  </div>
  <div class="field">
    Subtitle<br>
    <%= f.text_area :top_image %>
  </div>
  <div class="field">
    Category<br>
    <%= f.text_area :category %>
  </div>
  <div class="field">
    Content<br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
